<h1>Check Me In!</h1>

{{#if username}}
  Welcome {{username}}! Lets take a look at your classes
{{/if}}

{{#unless logged_in}}
  <p> Sign up see your classes!! </p>
{{/unless}}

{{#if logged_in}}
  <h2>Add a Student</h2>

  <form class="create-update-form" action="cats/create" method="POST">

    <div class="form-group">
      <label for="ca">Student Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="slee">Sleepy?</label><br>
      <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
      <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Cat</button>
  </form>
{{/if}}



<h2>Tentative Holding Spot</h2>

<ul>
  {{#each cats}}
    {{#unless this.sleepy}}
      <li>
        {{this.name}} - owned by {{this.User.email}}

        <form action="cats/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{> cats/delete-cat}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Tentative Holding Spot!</h2>

<ul>
  {{#each cats}}
